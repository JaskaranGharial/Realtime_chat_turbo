<%= form_with(model: @room, remote: true, class:'flex', data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"}) do |f| %>
  <%= f.text_field :name, class: 'form-control', autocomplete: 'off' %>
  <%= f.submit data: {disable_with: false}, class: "inline-block px-6 py-2.5 bg-red-50 text-red-600 font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-red-500 hover:text-white hover:shadow-lg focus:bg-red-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-600 active:shadow-lg transition duration-180 ease-in-out" %>
<% end %>