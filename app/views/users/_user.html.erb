<% if @single_room && @single_room.participant?(@single_room, user) %>
    <% isActive = 'active:bg-blue-600' %>
<% else %>
    <% isActive = '' %>
<% end %>
<li class="list-group-item flex justify-between items-center user_list_item <%= isActive %>">
<div>
    <%= link_to image_tag(user.chat_thumbnail, class:'chat_pfp'), user%>
</div>
    <%= link_to user.name || user.email, user ,class:'mx-2 username'%>
</li>
